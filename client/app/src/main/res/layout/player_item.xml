<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/contact_photo"
        android:layout_width="90dp"
        android:layout_height="105dp"
        android:background="@drawable/miniframe"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/contact_killed"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:background="@drawable/kill_small"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="2dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/contact_photo"
        android:layout_toRightOf="@+id/contact_photo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <club.vendetta.game.misc.TextUpgraded
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textLarge"
                android:id="@+id/login" />

            <club.vendetta.game.misc.TextUpgraded
                android:id="@+id/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingLeft="5dp"
                android:paddingRight="4dp"
                android:textSize="@dimen/textMedium"
                android:text="A"
                android:background="@color/green"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/underlined" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <club.vendetta.game.misc.TextUpgraded
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSmall"
                android:text="@string/rank_0"
                android:id="@+id/rank" />

            <club.vendetta.game.misc.TextUpgraded
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSmall"
                android:textColor="@color/gray"
                android:gravity="right"
                android:text="@string/playerWins" />

            <club.vendetta.game.misc.TextUpgraded
                android:id="@+id/wins"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSmall" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <club.vendetta.game.misc.TextUpgraded
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSmall"
                android:id="@+id/distance" />

            <club.vendetta.game.misc.TextUpgraded
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSmall"
                android:textColor="@color/gray"
                android:gravity="right"
                android:text="@string/playerKills" />

            <club.vendetta.game.misc.TextUpgraded
                android:id="@+id/kills"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <club.vendetta.game.misc.TextUpgraded
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSmall"
                android:textColor="@color/yellow"
                android:id="@+id/starCount" />

            <ImageView
                android:id="@+id/star0"
                style="@style/starCounter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/star1"
                style="@style/starCounter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/star2"
                style="@style/starCounter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/star3"
                style="@style/starCounter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/star4"
                style="@style/starCounter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/star5"
                style="@style/starCounter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/star6"
                style="@style/starCounter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/star7"
                style="@style/starCounter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/star8"
                style="@style/starCounter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/star9"
                style="@style/starCounter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>